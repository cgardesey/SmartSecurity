<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="security.smart.smartsecurity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8eaf6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">


            <ImageView
                android:id="@+id/alarm1"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:onClick="onAlarmIVClick"
                android:src="@drawable/alarm_off" />


            <ImageView
                android:id="@+id/alarm2"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:onClick="onAlarmIVClick"
                android:src="@drawable/alarm_off" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <Button
                android:id="@+id/allAlarms"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_bg_rounded_corners2"
                android:radius="120dp"
                android:text="All"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e8eaf6"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="16dp">


            <ImageView
                android:id="@+id/alarm3"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:onClick="onAlarmIVClick"
                android:src="@drawable/alarm_off" />


            <ImageView
                android:id="@+id/alarm4"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:onClick="onAlarmIVClick"
                android:src="@drawable/alarm_off" />


        </LinearLayout>
    </LinearLayout>

    <!--<SeekBar-->
    <!--android:id="@+id/seekBar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:max="1023" />-->

    <TextView
        android:id="@+id/balanceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/userTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="User:" />

    <TextView
        android:id="@+id/intruderAlertTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/checkBalanceBtn"
            android:layout_width="96dp"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_bg_rounded_corners"
            android:padding="8dp"
            android:text="Check Balance"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/loadCreditBtn"
            android:layout_width="96dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_bg_rounded_corners"
            android:padding="8dp"
            android:radius="64dp"
            android:text="Load Credit"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/powerIV"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:onClick="powerToggle"
        android:scaleType="fitCenter"
        android:src="@drawable/power_off" />
</LinearLayout>
